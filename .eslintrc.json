{
  "rules": {
    "max-depth": ["error", 1],
    "max-params": ["error", 2],
    "no-return-assign": "off",
    "no-return-await": "off",
    "class-methods-use-this": "off",
    "import/order": [
      "error",
      {
        "groups": [
          "type",
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index",
          "unknown"
        ],
        "pathGroups": [
          {
            "pattern": "@service/*",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "@domain/*",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "@view/*",
            "group": "internal",
            "position": "after"
          }
        ],

        "pathGroupsExcludedImportTypes": ["@tanstack*"],
        "alphabetize": {
          "order": "asc"
        }
      }
    ]
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["airbnb-base", "prettier", "plugin:import/recommended"],
  "plugins": ["import"],
  "ignorePatterns": ["dist"]
}
